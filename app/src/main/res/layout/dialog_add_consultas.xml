<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextTipoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Consulta (exame, avaliação, etc.)"/>

    <EditText
        android:id="@+id/editTextDataConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data da Consulta (DD/MM/AAAA)"
        android:focusable="false"/>

    <EditText
        android:id="@+id/editTextNomeVeterinario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Veterinário Responsável"/>

    <EditText
        android:id="@+id/editTextObservacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observações (medicações prescritas, recomendações, etc.)"
        android:inputType="textMultiLine"
        android:minLines="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <!-- Botões para salvar ou cancelar podem ser adicionados aqui -->
    </LinearLayout>
</LinearLayout>
