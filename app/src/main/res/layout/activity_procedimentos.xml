<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procedimentos do Pet"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"
        android:textColor="?attr/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqui vocÃª pode visualizar e gerenciar os procedimentos do seu pet."
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/gray"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProcedimentos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buttonAddProcedimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Procedimento"
        android:layout_gravity="center"
        style="@style/ButtonStyle"
        android:layout_marginTop="16dp"/>

</LinearLayout>
