<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nossos Parceiros 🤝"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conheça nossos parceiros que ajudam a cuidar do seu pet!"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/textView_petz_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🐾 Petz: A maior rede de pet shops do Brasil, oferecendo uma ampla variedade de produtos e serviços para o bem-estar do seu animal de estimação."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_petz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visitar Petz 🛒"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorAccent"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_petlove_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❤️ Petlove: A plataforma ideal para comprar produtos para seu pet, com uma grande variedade de alimentos, medicamentos e acessórios."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_petlove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visitar Petlove 🛍️"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorAccent"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
