<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorPrimaryDark"
    tools:context=".activity.UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicione o seu pet"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimaryDark"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha uma foto"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimaryDark"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-light"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/baseline_upload_file_24"
                android:id="@+id/uploadImage"
                android:layout_marginBottom="16dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadPetName"
                android:background="@drawable/black_border"
                android:padding="16dp"
                android:hint="Nome"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadPetType"
                android:background="@drawable/black_border"
                android:padding="16dp"
                android:hint="Tipo do pet (cachorro/gato/pássaro)"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadPetGender"
                android:background="@drawable/black_border"
                android:padding="16dp"
                android:hint="Sexo (Macho/Fêmea)"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                app:cornerRadius="20dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
